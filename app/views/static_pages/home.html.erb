<% provide(:title, 'Home') %>
<!-- html -->
<!-- body -->
<div class="center jumbotron">
	<h1 class="home-header">Welcome to VitStack</h1>
	<p class="home-text">
		If you take one or more supplements or vitamins, try this app out.  Why not?  It's free and you can save money, swallow less pills, spend less time shopping for supplements, and cut down on packaging waste.</p>
		<br><br>
	<p class="home-text">Let's get started.
	</p>
	<div class="container">
		<div class="row">
		  <div class="col-md-6 col-md-offset-3">
		    <%= form_for(@formula_profile) do |f| %>
		      <%#= render 'shared/error_messages' %>

					<%= f.label :formula_name, "Formula Name", class: 'form-formula-name' %>
		      <%= f.text_field :formula_name, class: 'form-control', placeholder: "e.g. Morning Wellness formula or Jill's Pre-workout" %>

		      <%= f.submit "Build your formula", class: "btn btn-primary new-formula-button" %>
		    <% end %>
		  </div>
		</div>
</div>
</div>

<!-- /body -->
<!-- /html -->
